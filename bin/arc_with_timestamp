#!/bin/sh -e
usage() { >&2 echo "usage: ${0##*/} <src> <archive_dir>"; exit 1; }
[ -e "$1" ] || usage
[ -n "$2" ] || usage

src=$(readlink -f "$1")
archive_dir=$(readlink -f "$2")
archive=$(printf "%s/%s%s-%s" \
	"$archive_dir" \
	"$(hostname -s)" \
	"$(echo "$src"|sed s#/#-#g)" \
	"$(date +%Y%m%d-%H%M%S)")

"${0%/*}/arc" "$src" "$archive"
